<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    android:foreground = "?attr/selectableItemBackground"
    android:layout_margin="16sp"
    app:elevation="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/checked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="" />
        <TextView
            android:id="@+id/plan_name"
            android:text="This is a plan!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/checked" />
        <TextView
            android:id="@+id/plan_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="9999/99/99"
            android:layout_alignBottom="@+id/checked"
            android:layout_toEndOf="@+id/checked" />
        <TextView
            android:id="@+id/plan_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_below="@+id/plan_time"
            android:text="Balabala小魔仙"
            android:layout_toEndOf="@+id/radioButton" />


    </RelativeLayout>



</android.support.v7.widget.CardView>